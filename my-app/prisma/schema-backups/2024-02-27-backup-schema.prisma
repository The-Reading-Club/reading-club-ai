generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

// https://github.com/AntonioErdeljac/next-auth-v5-advanced-guide/blob/master/prisma/schema.prisma

model User {
  intID           Int                  @id @default(autoincrement()) @map("account")
  id              String               @unique(map: "id") @db.VarChar(50) @map("oauth_id") @default(cuid())
  name            String?
  email           String               @unique(map: "email") @db.VarChar(50)
  verified        Boolean?             @default(dbgenerated("b'0'")) @db.Bit(1)
  emailVerified   DateTime?            @map("date_verified")
  image           String?
  password        String?              @db.VarChar(255)
  register_date   DateTime             @default(now()) @db.Timestamp(0)
  token           String?              @db.Text
  account_type    account_account_type @default(standard)
  premium         Boolean              @default(dbgenerated("b'0'")) @db.Bit(1)
  hashed_password String?              @db.VarChar(250)

  accounts Account[]
  // https://github.com/nextauthjs/next-auth/issues/4567#issuecomment-1132393882
  @@map("account") // this sucks!!!
}

model Account {
  id                Int     @id @default(autoincrement())
  userId            String @map("oauth_id") // I hate this confusing mappings
  type              String  @db.VarChar(250)
  provider          String  @db.VarChar(250) @map("provider_name")
  providerAccountId String  @db.VarChar(250) @map("provider_oauth_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String? @db.VarChar(250)
  scope             String? @db.VarChar(250)
  id_token          String? @db.Text
  session_state     String? @db.VarChar(250)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])

  @@index([userId], map: "User") // this is for foreign keys
  @@map("provider") // this sucks!!!
}

model UserApiLimit {
  id        String      @id @default(cuid())
  userId    String   @unique @map("account_oauth_id")
  count     Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("account_api_limit")
}

model UserSubscription {
  id        String      @id @default(cuid())
  userId    String   @unique @map("account_oauth_id")
  stripeCustomerId       String?   @unique @map(name: "stripe_customer_id")
  stripeSubscriptionId   String?   @unique @map(name: "stripe_subscription_id")
  stripePriceId          String?   @map(name: "stripe_price_id")
  stripeCurrentPeriodEnd DateTime? @map(name: "stripe_current_period_end")

  @@map("stripe_subscription")
}



